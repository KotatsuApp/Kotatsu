<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="8dp"
	app:cardElevation="2dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="16dp"
		android:gravity="center_vertical">

		<!-- Priority number -->
		<TextView
			android:id="@+id/textPriority"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_marginEnd="16dp"
			android:background="@drawable/bg_circle_button"
			android:gravity="center"
			android:textAppearance="?attr/textAppearanceBodyMedium"
			android:textStyle="bold"
			tools:text="1" />

		<!-- Translation info -->
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:id="@+id/textBranch"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textAppearance="?attr/textAppearanceBodyLarge"
				android:textStyle="bold"
				tools:text="English (Official)" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/textChapterCount"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?attr/textAppearanceBodyMedium"
					android:textColor="?attr/colorOnSurfaceVariant"
					tools:text="142 chapters" />

				<TextView
					android:id="@+id/textLastUsed"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="16dp"
					android:background="@drawable/bg_badge_accent"
					android:paddingHorizontal="8dp"
					android:paddingVertical="2dp"
					android:text="@string/recently_used"
					android:textAppearance="?attr/textAppearanceBodySmall"
					android:textColor="?attr/colorOnPrimary"
					android:visibility="gone"
					tools:visibility="visible" />

			</LinearLayout>

		</LinearLayout>

		<!-- Enable/Disable checkbox -->
		<com.google.android.material.checkbox.MaterialCheckBox
			android:id="@+id/checkboxEnabled"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:checked="true" />

		<!-- Drag handle -->
		<ImageView
			android:id="@+id/imageReorder"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_marginStart="8dp"
			android:contentDescription="@string/translation_drag_to_reorder"
			android:src="@drawable/ic_reorder_handle"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:padding="4dp" />

	</LinearLayout>

</com.google.android.material.card.MaterialCardView>